-- Anti-AFK
LocalPlayer.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

-- Helper Functions
local ErrorLog = {}

local function SafeCall(func, context)
    local success, result = pcall(func)
    if not success then
        table.insert(ErrorLog, {
            Time = os.date("%H:%M:%S"),
            Context = context,
            Error = tostring(result)
        })
        UpdateStatus("Error: " .. context)
        warn("[LARB ERROR]", context, ":", result)
    end
    return success, result
end

local function UpdateStatus(text)
    StatusLabel:Set("Status: " .. text)
end

local function GetCurrentQuestData()
    local myLevel = LocalPlayer.Data.Level.Value
    local bestQuest = nil
    
    for _, q in ipairs(QuestList) do
        if myLevel >= q[1] then
            bestQuest = q
        end
    end
    return bestQuest
end

local function CheckActiveQuest()
    local PlayerGui = LocalPlayer:FindFirstChild("PlayerGui")
    if PlayerGui and PlayerGui:FindFirstChild("Main") and PlayerGui.Main:FindFirstChild("Quest") then
        return PlayerGui.Main.Quest.Visible
    end
    return false
end

local function GetActiveQuestTarget()
    local PlayerGui = LocalPlayer:FindFirstChild("PlayerGui")
    if not (PlayerGui and PlayerGui:FindFirstChild("Main") and
            PlayerGui.Main:FindFirstChild("Quest") and
            PlayerGui.Main.Quest.Visible) then
        return nil
    end

    local Container = PlayerGui.Main.Quest:FindFirstChild("Container")
    if not (Container and Container:FindFirstChild("QuestTitle") and
            Container.QuestTitle:FindFirstChild("Title")) then
        return nil
    end

    local text = Container.QuestTitle.Title.Text:lower() -- lowercase для сравнения

    -- Более умный парсинг
    for _, q in ipairs(QuestList) do
        if text:find(q[4]:lower()) then
            return q[4]
        end
    end

    -- Fallback: проверяем все моби в Enemies
    for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
        if text:find(enemy.Name:lower()) then
            return enemy.Name
        end
    end

    return nil
end

local function WaitForMobRespawn(mobName, timeout)
    local startTime = tick()
    while tick() - startTime < (timeout or 30) do
        for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
            if enemy.Name:find(mobName) and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                return enemy
            end
        end
        task.wait(1)
    end
    return nil
end

local CurrentTween = nil

local function TweenTo(targetCFrame)
    local Character = LocalPlayer.Character
    if not Character or not Character:FindFirstChild("HumanoidRootPart") then
        return false
    end

    local Root = Character.HumanoidRootPart
    local distance = (Root.Position - targetCFrame.Position).Magnitude

    if CurrentTween then
        CurrentTween:Cancel()
        CurrentTween = nil
    end

    local speed = distance > 1000 and 300 or 150
    local tweenInfo = TweenInfo.new(
        distance / speed,
        Enum.EasingStyle.Linear,
        Enum.EasingDirection.Out
    )

    CurrentTween = TweenService:Create(Root, tweenInfo, { CFrame = targetCFrame })

    local success = pcall(function()
        _G.NoClip = true
        CurrentTween:Play()
        CurrentTween.Completed:Wait()
    end)

    _G.NoClip = false
    CurrentTween = nil
    return success
end

RunService.Stepped:Connect(function()
    if _G.NoClip and LocalPlayer.Character then
        for _, v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

local NPCCache = {}
local LastCacheUpdate = 0

local function FindNPC(name)
    if tick() - LastCacheUpdate > 5 then
        NPCCache = {}
        if Workspace:FindFirstChild("NPCs") then
            for _, v in pairs(Workspace.NPCs:GetChildren()) do
                NPCCache[v.Name] = v
            end
        end
        LastCacheUpdate = tick()
    end

    if NPCCache[name] and NPCCache[name].Parent then
        return NPCCache[name]
    end

    for npcName, npc in pairs(NPCCache) do
        if npcName:find(name) and npc.Parent then
            return npc
        end
    end
    
    -- Fallback for bosses/mobs not in NPCs folder
    for _, v in pairs(Workspace.Enemies:GetChildren()) do
        if v.Name:find(name) then
            return v
        end
    end

    return nil
end

local ESPTable = {}

local function CreateESP(part, espType, name, color)
    if not part or ESPTable[part] then return end

    local BillboardGui = Instance.new("BillboardGui")
    BillboardGui.Name = "ESP"
    BillboardGui.Adornee = part
    BillboardGui.Size = UDim2.new(0, 100, 0, 50)
    BillboardGui.AlwaysOnTop = true
    BillboardGui.ResetOnSpawn = false

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Parent = BillboardGui
    TextLabel.BackgroundColor3 = Color3.new(0, 0, 0)
    TextLabel.BackgroundTransparency = 0.5
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.TextColor3 = color or Color3.new(1, 1, 1)
    TextLabel.TextScaled = true
    TextLabel.Font = Enum.Font.SourceSansBold
    TextLabel.Text = name

    BillboardGui.Parent = part
    ESPTable[part] = {Gui = BillboardGui, Type = espType}
end

local function UpdateESP()
    -- Clear old ESPs based on toggle status
    for part, data in pairs(ESPTable) do
        local shouldRemove = false
        if data.Type == "Player" and not _G.ESPPlayer then shouldRemove = true end
        if data.Type == "Chest" and not _G.ESPChest then shouldRemove = true end
        if data.Type == "Fruit" and not _G.ESPFruit then shouldRemove = true end
        
        if shouldRemove or not part or not part.Parent or (part:IsA("HumanoidRootPart") and (not part.Parent:FindFirstChild("Humanoid") or part.Parent.Humanoid.Health <= 0)) then
            if data.Gui then
                data.Gui:Destroy()
            end
            ESPTable[part] = nil
        end
    end

    -- Add new ESPs
    if _G.ESPPlayer then
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                CreateESP(player.Character.HumanoidRootPart, "Player", player.Name, Color3.new(1, 0, 0))
            end
        end
    end

    if _G.ESPChest then
        local searchFolders = {Workspace:FindFirstChild("Map"), Workspace}
        for _, folder in pairs(searchFolders) do
            if folder then
                for _, v in pairs(folder:GetDescendants()) do
                    if v.Name:find("Chest") then
                        if v:IsA("MeshPart") or v:IsA("Part") then
                            CreateESP(v, "Chest", "CHEST", Color3.fromRGB(255, 255, 0))
                        elseif v:IsA("Model") and v:FindFirstChild("Handle") and v.Handle:IsA("BasePart") then
                            CreateESP(v.Handle, "Chest", "CHEST", Color3.fromRGB(255, 255, 0))
                        end
                    end
                end
            end
        end
    end
    
    if _G.ESPFruit then
        for _, v in pairs(Workspace:GetDescendants()) do
            if v:IsA("MeshPart") and table.find({"Bannana", "Apple", "Orange"}, v.Name) then
                 CreateESP(v, "Fruit", v.Name, Color3.new(0, 1, 0))
            end
        end
    end
end

-- ESP Loop
task.spawn(function()
    while task.wait(0.5) do
        UpdateESP()
    end
end)

local CachedEnemies = {}
local LastEnemyUpdate = 0

local toolTypes = {
    ["Demon Fruit"] = "Blox Fruit",
    ["Sword"] = "Sword",
    ["Melee"] = "Melee"
}

local function EquipSelected()
    local Character = LocalPlayer.Character
    if not Character then return end
    local Humanoid = Character:FindFirstChild("Humanoid")
    if not Humanoid then return end

    local WantedType = _G.SelectWeapon

    local Current = Character:FindFirstChildOfClass("Tool")
    if Current and Current.ToolTip == toolTypes[WantedType] then
        return
    end

    if Current then
        Humanoid:UnequipTools()
        task.wait(0.1)
    end

    local priorityConfig = {
        ["Demon Fruit"] = {"Dough-Dough", "Leopard-Leopard", "Dragon-Dragon"},
        ["Sword"] = {"Saber", "Bisento", "Shisui"}
    }

    if priorityConfig[WantedType] then
        for _, priorityName in ipairs(priorityConfig[WantedType]) do
            for _, tool in pairs(LocalPlayer.Backpack:GetChildren()) do
                if tool:IsA("Tool") and tool.Name == priorityName then
                    Humanoid:EquipTool(tool)
                    return
                end
            end
        end
    end

    for _, tool in pairs(LocalPlayer.Backpack:GetChildren()) do
        if tool:IsA("Tool") and tool.ToolTip == toolTypes[WantedType] then
            Humanoid:EquipTool(tool)
            return
        end
    end
end
-- Main Loop
task.spawn(function()
    -- Wait for Level Data to load
    repeat task.wait() until LocalPlayer:FindFirstChild("Data") and LocalPlayer.Data:FindFirstChild("Level") and LocalPlayer.Data.Level.Value > 0
    
    while task.wait() do
        

        if _G.AutoFarm then
            SafeCall(function()
                local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
                local HumanoidRootPart = Character:FindFirstChild("HumanoidRootPart")
                if not HumanoidRootPart then return end
                
                local QuestData = GetCurrentQuestData()
                local TargetMobName = nil
                
                if CheckActiveQuest() then
                    TargetMobName = GetActiveQuestTarget()
                    if not TargetMobName and QuestData then
                         TargetMobName = QuestData[4]
                    end
                    UpdateStatus("Farming " .. (TargetMobName or "Unknown") .. " (Lv: " .. LocalPlayer.Data.Level.Value .. ")")
                else
                    UpdateStatus("Getting Quest (Lv: " .. LocalPlayer.Data.Level.Value .. ")")
                    if QuestData then
                        local questGiverName = QuestData[3]
                        local questNameForCoord = QuestData[2]
                        local questID = QuestData[6]
                        
                        local questGiverAreaCFrame = QuestGiverCoordinates[questNameForCoord]

                        if questGiverAreaCFrame and (HumanoidRootPart.Position - questGiverAreaCFrame.Position).Magnitude > 100 then
                            UpdateStatus("Teleporting to " .. questGiverName .. " area")
                            TweenTo(questGiverAreaCFrame)
                            task.wait(1)
                        end

                        local NPC = FindNPC(questGiverName)
                        if NPC and NPC:FindFirstChild("HumanoidRootPart") then
                            local dist = (HumanoidRootPart.Position - NPC.HumanoidRootPart.Position).Magnitude
                            if dist > 15 then
                                TweenTo(NPC.HumanoidRootPart.CFrame)
                            else
                                task.wait(0.5)
                                CommF:InvokeServer("StartQuest", QuestData[2], questID)
                                CommF:InvokeServer("SetSpawnPoint")
                                task.wait(1)
                            end
                        else
                            UpdateStatus("NPC Not Found: " .. questGiverName)
                        end
                    end
                end

                if not TargetMobName then
                    _G.FarmPos = nil
                    return 
                end

                if tick() - LastEnemyUpdate > 0.5 then
                    CachedEnemies = {}
                    for _, enemy in pairs(Workspace.Enemies:GetChildren()) do
                        if enemy.Name:find(TargetMobName) and
                           enemy:FindFirstChild("HumanoidRootPart") and
                           enemy:FindFirstChild("Humanoid") and
                           enemy.Humanoid.Health > 0 then
                            table.insert(CachedEnemies, enemy)
                        end
                    end
                    LastEnemyUpdate = tick()
                end
                
                local Target = CachedEnemies[1]

                if Target then
                    EquipSelected()

                    if not _G.FarmPos or (Target.HumanoidRootPart.Position - _G.FarmPos).Magnitude > 50 then
                        _G.FarmPos = Target.HumanoidRootPart.Position + Vector3.new(0, 20, 0)
                    end
                    
                    local AttackPos = CFrame.new(_G.FarmPos)
                    local Distance = (HumanoidRootPart.Position - AttackPos.Position).Magnitude
                    if Distance > 250 then
                        TweenTo(AttackPos)
                        _G.FarmPos = nil
                    else
                        HumanoidRootPart.CFrame = AttackPos
                    end
                    
                    HumanoidRootPart.Velocity = Vector3.new(0,0,0)
                    if Character:FindFirstChild("Humanoid") then
                        Character.Humanoid.PlatformStand = true
                    end
                    
                    for _, enemy in ipairs(CachedEnemies) do
                        if enemy.Parent and enemy.Humanoid.Health > 0 then
                            local eDist = (enemy.HumanoidRootPart.Position - HumanoidRootPart.Position).Magnitude
                            if eDist < 300 then
                                enemy.HumanoidRootPart.CanCollide = false
                                enemy.HumanoidRootPart.CFrame = HumanoidRootPart.CFrame * CFrame.new(0, -10, 0)
                                enemy.HumanoidRootPart.Velocity = Vector3.zero
                                enemy.Humanoid:ChangeState(14)
                            end
                        end
                    end
                    
                    game:GetService("VirtualUser"):CaptureController()
                    game:GetService("VirtualUser"):ClickButton1(Vector2.new(0, 0))
                    
                    if _G.AutoSkills then
                        pcall(function()
                            local skills = {"Z", "X", "C", "V"}
                            for _, key in ipairs(skills) do
                                game:GetService("VirtualInputManager"):SendKeyEvent(true, key, false, game)
                                game:GetService("VirtualInputManager"):SendKeyEvent(false, key, false, game)
                            end
                        end)
                    end
                else
                     UpdateStatus("Mob Not Found: " .. TargetMobName)
                     local respawn = WaitForMobRespawn(TargetMobName, 30)
                     if respawn then
                         CachedEnemies = {respawn}
                     else
                         _G.FarmPos = nil
                     end
                end
            end, "Auto Farm Loop")
        elseif _G.AutoFarmBoss then
            SafeCall(function()
                local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
                local HumanoidRootPart = Character:FindFirstChild("HumanoidRootPart")
                if not HumanoidRootPart then return end

                UpdateStatus("Farming Boss: " .. _G.SelectedBoss)

                -- Find Boss using the generic FindNPC function
                local Target = FindNPC(_G.SelectedBoss)

                if Target and Target:FindFirstChild("Humanoid") and Target.Humanoid.Health > 0 and Target:FindFirstChild("HumanoidRootPart") then
                    -- Equip Weapon
                    EquipSelected() -- Re-use the same function

                    -- Position and Attack
                    local AttackPos = Target.HumanoidRootPart.CFrame * CFrame.new(0, 15, 0)
                    HumanoidRootPart.CFrame = AttackPos
                    HumanoidRootPart.Velocity = Vector3.new(0,0,0)
                    if Character:FindFirstChild("Humanoid") then
                        Character.Humanoid.PlatformStand = true
                    end
                    
                    -- Bring Boss (if needed, less aggressive)
                    Target.HumanoidRootPart.CFrame = HumanoidRootPart.CFrame * CFrame.new(0, -10, 0)

                    -- Auto Attack
                    game:GetService("VirtualUser"):CaptureController()
                    game:GetService("VirtualUser"):ClickButton1(Vector2.new(0, 0))
                    
                    -- Auto Skills
                    if _G.AutoSkills then
                        pcall(function()
                            local skills = {"Z", "X", "C", "V"}
                            for _, key in ipairs(skills) do
                                game:GetService("VirtualInputManager"):SendKeyEvent(true, key, false, game)
                                game:GetService("VirtualInputManager"):SendKeyEvent(false, key, false, game)
                            end
                        end)
                    end
                else
                    UpdateStatus("Boss not found. Waiting...")
                    -- Teleport to spawn location if boss is not found
                    for _, bossData in ipairs(BossList) do
                        if bossData[1] == _G.SelectedBoss then
                            local dist = (HumanoidRootPart.Position - bossData[2].Position).Magnitude
                            if dist > 50 then
                                TweenTo(bossData[2])
                            end
                            break
                        end
                    end
                end
            end, "Auto Farm Boss Loop")
        else
            if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                 LocalPlayer.Character.Humanoid.PlatformStand = false
            end
            UpdateStatus("Idle")
        end
    end
end)

-- Stats Loop
spawn(function()
    while task.wait(0.5) do
        if _G.AutoStats then
            pcall(function()
                if LocalPlayer.Data.Points.Value > 0 then
                    local StatMap = {
                        ["Melee"] = "Melee",
                        ["Defense"] = "Defense",
                        ["Sword"] = "Sword",
                        ["Gun"] = "Gun",
                        ["Demon Fruit"] = "Demon Fruit" 
                    }
                    CommF:InvokeServer("AddPoint", StatMap[_G.SelectStat], 1)
                end
            end)
        end
    end
end)

