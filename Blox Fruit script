   Name = "Select Fighting Style",
   Options = {"Black Leg", "Electro", "Fishman Karate", "Dragon Breath"},
   CurrentOption = "Black Leg",
   Callback = function(Option)
      _G.SelectFightingStyle = Option
   end,
